void AddBooks(Book bk[])
{
	FILE *f;
	f = fopen(file_book, "r");
	int i;
	fscanf(f, "%d", &i);
	CatPhan();
	cout << "\n\t\t\t\t\t";
	cout << KiTu2 << " Sach thu " << i ;
	
	fclose(f);
	
}
